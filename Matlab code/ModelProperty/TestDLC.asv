%% Script that tests the DLC function

V_dlc = 5;
Delta_V_dlc = 5;

desire = zeros(50,50);
v_ant = zeros(50, 50);
v = zeros(50, 50);
for i=1:50
    for j=1:50
        v_ant(i,j) = i;
        v(i,j)= j;
        if v_ant(1,i)-v(i,j)>Delta_V_dlc
            desire(i,j) = (v_ant(1,i)-v(i,j))/max(v(i,j), V_dlc);
        else
            desire(i,j) = 0;
        end
        desire(i,j) = min(1, desire(i,j));
    end
end

surf(v_ant', (v_ant-v)', desire);